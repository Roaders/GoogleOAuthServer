    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "diagnostics": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true
    },
    "compileOnSave": true,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
